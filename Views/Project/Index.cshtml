@model IEnumerable<Data.Entities.ProjectEntity>

@{
    ViewData["Title"] = "Projects";
}

<h2>Your Projects</h2>

<a href="@Url.Action("Create", "Project")" class="btn btn-primary mb-3">Create a New Project</a>

@if (!Model.Any())
{
    <div class="alert alert-info">
        You don't have any projects yet.
    </div>
}
else
{
    <div class="project-list">
        <ul class="list-group">
            @foreach (var project in Model)
            {
                <li class="list-group-item">
                    <a asp-action="Details" asp-route-id="@project.Id" class="project-link">@project.Name</a>
                </li>
            }
        </ul>
    </div>
}
